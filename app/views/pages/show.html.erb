<%= link_to("Back to Chapter", chapter_path(@page.chapter)) %>

<h3>Page <%= @page.page_number %> - <%= @page.date.strftime("%A, %B %d") %></h3>

<div>
  <p><%= @page.quote %></p>
</div>

<%= link_to("Edit Page", edit_page_path(@page)) %>
<div>
  <h3>Thank you for...</h3>
  <p><%= @page.thank_you %></p>
</div>

<div>
  <h2>Today's Lesson:</h2>
  <p><%= @page.lesson_learned %>
</div>

<div>
  <h2>Tasks:</h2>
  <%= link_to("Add Task", new_page_task_path(@page)) %>
  <% @page.tasks.each do |t| %>
    <p><%= t.name %></p>
  <% end %>
</div>

<div>
  <h2>Entries:</h2>

  <%= link_to("Add Entry", new_page_entry_path(@page)) %>

  <ul>
    <% @page.entries.each do |e| %>
      <li><%= link_to(e.created_at.strftime("%H:%M"), entry_path(e)) %>
    <% end %>
</div>
